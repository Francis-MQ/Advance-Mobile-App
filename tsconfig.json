{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "jsx": "react-native",              // ðŸ‘ˆ Needed for .tsx files
    "skipLibCheck": true,               // ðŸ‘ˆ Ignore type mismatches from node_modules
    "esModuleInterop": true,            // ðŸ‘ˆ Helps with imports
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
